{
  "name": "syf-blog",
  "version": "0.1.0",
  "description": "沈怡帆的博客",
  "private": true,
  "scripts": {
    "bootstrap": "yarn install",
    "serve": "vue-cli-service serve  --copy --port 3100",
    "build": "vue-cli-service build --modern --mode prod",
    "build:test": "vue-cli-service build --modern --mode test",
    "lint": "vue-cli-service lint",
    "reinstall": "rimraf yarn.lock && rimraf package.lock.json && npx rimraf node_modules && yarn run bootstrap",
    "update": "npx yarn upgrade-interactive --latest"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "core-js": "^3.3.2",
    "lib-flexible": "^0.3.2",
    "lodash": "^4.17.15",
    "normalize.css": "^8.0.1",
    "nprogress": "^0.2.0",
    "postcss-pxtorem": "^4.0.1",
    "querystring": "^0.2.0",
    "storejs": "^1.1.0",
    "vant": "^2.12.4",
    "vue": "^2.6.11",
    "vue-cookies": "^1.7.4",
    "vue-router": "^3.1.3",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.0.0",
    "@vue/cli-plugin-eslint": "^4.0.0",
    "@vue/cli-service": "^4.0.0",
    "babel-eslint": "^10.0.3",
    "babel-plugin-import": "^1.12.2",
    "compression-webpack-plugin": "^3.0.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "less": "^3.0.4",
    "less-loader": "^5.0.0",
    "rimraf": "^3.0.2",
    "script-ext-html-webpack-plugin": "^2.1.4",
    "terser-webpack-plugin": "^2.2.1",
    "vconsole": "^3.3.4",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-pxtorem": {
        "rootValue": 37.5,
        "propList": [
          "*"
        ],
        "selectorBlackList": [],
        "minPixelValue": 10
      }
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
